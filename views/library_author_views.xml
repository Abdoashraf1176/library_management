<odoo>
    <data>

        <record id="view_library_author_tree" model="ir.ui.view">
            <field name="name">library.author.tree</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_library_author_form" model="ir.ui.view">
            <field name="name">library.author.form</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <div class="o_stat_info">
                                <span class="fa fa-book" style="margin-right:6px;"/>
                                <field name="book_count" widget="statinfo" string="Books"/>
                            </div>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="biography"/>
                            <field name="book_ids"/>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>
        <record id="action_library_author" model="ir.actions.act_window">
            <field name="name">Authors</field>
            <field name="res_model">library.author</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>

</odoo>
