<odoo>
    <data>

        <record id="view_library_order_tree" model="ir.ui.view">
            <field name="name">library.order.tree</field>
            <field name="model">library.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="book_id"/>
                    <field name="customer"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="view_library_order_form" model="ir.ui.view">
            <field name="name">library.order.form</field>
            <field name="model">library.order</field>
            <field name="arch" type="xml">
                <form>

                    <header>
                        <button name="action_confirm_order" type="object" string="Confirm Order" />
                    </header>

                    <sheet>
                        <group>
                            <field name="book_id"/>
                            <field name="customer"/>
                            <field name="status"/>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>
        <record id="action_library_order" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">library.order</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>

</odoo>
